@import 'nib'

body
  background: black
  color: white
  font-family: 'Roboto', sans-serif
  margin: 0

h1
  font-weight: 300
  padding-left: 20px

ul
  list-style: none
  padding-left: 20px

a
  color: white
  text-decoration: none

a:hover
  text-decoration: underline

#game
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
